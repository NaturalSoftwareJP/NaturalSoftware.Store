<Page
    x:Class="SensorStoreApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SensorStoreApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontFamily="Global User Interface">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="TextLight" Text="Light" FontSize="20"/>
            <TextBlock x:Name="TextAccelerometer" Text="Accelerometer" FontSize="20" />
            <TextBlock x:Name="TextGyrometer" Text="Gyrometer" FontSize="20" />
            <TextBlock x:Name="TextCompass" Text="Compass" FontSize="20" />
            <TextBlock x:Name="TextInclinometer" Text="Inclinometer" FontSize="20" />
            <!--<TextBlock x:Name="TextGeolocation" Text="Geolocation" />-->
        </StackPanel>
    </Grid>
</Page>
