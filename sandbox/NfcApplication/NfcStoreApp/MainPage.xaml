<Page
    x:Class="NfcStoreApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NfcStoreApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="TextMessage"/>
            <TextBox x:Name="TextSendMessage"/>
            <Button x:Name="ButtonSend" Content="メッセージを送る" Click="ButtonSend_Click"/>
            <Button x:Name="ButtonRecieve" Content="メッセージを受ける" Click="ButtonRecieve_Click"/>
            <TextBlock x:Name="TextRecieveMessage"/>
        </StackPanel>
    </Grid>
</Page>
